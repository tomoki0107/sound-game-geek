<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        記事編集
      </h1>
    </div>
  </div>
</section>



<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_with(model: @article, local: true) do |f| %>
          <div class="field">
            <%= f.label :title, "タイトル", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :info, "内容", class: "label" %>
            <%= f.text_area :info, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.file_field :image, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :category_id, "カテゴリー", class: "label" %>
            <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"input"})  %>
          </div>

          
          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
